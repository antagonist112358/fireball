using Nemerle;
using Nemerle.Imperative;
using System.Console;

module Program
{
  mutable counter : int;
  
  [Memoize]
  Test(x : int) : int
  {
    when (x > 0)
    {
      counter += 1;
      return counter;
    }
    0
  }

  Main() : void
  {
    def a = Test(1);
    def b = Test(1);
    WriteLine(a);
    WriteLine(b);
  }
}
/*
BEGIN-OUTPUT
1
1
END-OUTPUT
