using System.Console;

public variant X
{
  | A
    {
      x : int;
      
      // this replace autogenerated (by Record macro) ctor
      public new this(_x : int)
      {
        x = _x * 2;
      }
    }
    
  | B { x : int; }

  public override ToString() : string
  {
    match (this)
    {
      | A(x) => $"X.A($x)"
      | B(x) => $"X.B($x)"
    }
  }
}

module Program
{
  Main() : void
  {
    WriteLine(X.A(5));
    WriteLine(X.B(5));
    WriteLine(X.A(1));
  }
}

