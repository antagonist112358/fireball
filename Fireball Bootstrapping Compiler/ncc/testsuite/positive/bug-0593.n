using System.Console;

module Program {
    public Main() : void {
        def a = 10s + 10s;
		WriteLine(a.GetType());

		def b = (30 : short) + (30 : ushort);
		WriteLine(b.GetType());

		def c = (7b + (8 : byte)) : short;
		WriteLine(c.GetType());

		def d = 7b + (250 : byte);  // here comes overflow of byte value, it is converted to Int32 by design
		WriteLine(d.GetType()); 
    }
}
